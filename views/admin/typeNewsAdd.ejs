
        <%- include('../layout/header.admin.ejs') -%>
        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Tin tức
                            <small>Add</small>
                        </h1>
                    </div>
                    <!-- /.col-lg-12 -->
                    <div class="col-lg-7" style="padding-bottom:120px">
                            <% if(succesful === 1){%>
                                <div class="alert alert-success" role="alert">Thêm thành công </div>
                            <% }%>
                        <form action="admin/loaitin/add" method="POST">
                                <div class="form-group">
                                    <label>Thể loại</label>
                                    <select class="form-control" name="theloai">
                                        <% 
                                        data.forEach((element)=>{%>
                                                <option ><%= element.ten%></option>
                                        <%})
                                        %>
                                    </select>
                                </div>
                                    <%# Tên loại tin%>
                               <div class="form-group">
                                   <label>Tên loại tin</label>
                                       <%# handler err %>
                                       <% if(err[0] === 0){%>
                                           <div class="alert alert-danger" role="alert">
                                           Chưa nhập Category Name 
                                           </div>
                                       <%}%>
                                   <input class="form-control" name="typeName" placeholder="Please Enter Category Name" />
                               </div>

                                    <%# tên không dấu  %>
                               <div class="form-group">    
                                   <label>Tên không dấu</label>
                                       <%# handler err %>
                                       <% if(err[1] === 0){%>
                                           <div class="alert alert-danger" role="alert">
                                           Chưa nhập tên không dấu 
                                           </div>
                                       <%}%>
                                   <input class="form-control" name="tenkhongdau" placeholder="Please Enter Category Order" />
                               </div>
                             
                           <button type="submit" class="btn btn-default">Category Add</button>
                           <button type="reset" class="btn btn-default">Reset</button>
                       </form>
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

        
        <%- include('../layout/footer.admin.ejs') -%>